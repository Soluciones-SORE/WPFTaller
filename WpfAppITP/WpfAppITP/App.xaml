<Application x:Class="WpfAppITP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppITP"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="PlantillaAlumnos">
            <Viewbox>
                <StackPanel>
                    <Label Content="{Binding Nombre}"
                         FontSize="20" Foreground="Brown"/>
                    <Label Content="{Binding Telefono}"
                         FontSize="15" Foreground="Gray"/>
                    <Label Content="{Binding Correo}"
                         FontSize="15" Foreground="Gray"/>
                </StackPanel>
            </Viewbox>
        </DataTemplate>
    </Application.Resources>
</Application>
